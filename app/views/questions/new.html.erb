<div class="container top-page-padding">

  <div class="question-h2"><h2> ADD QUESTION </h2></div>

  <div class="add-new-question">
    <div class="question-fields">

      

      <%= form_tag [@drill_group, @question] do %>

      <div>
        <%= label_tag :title %><br>
        <%= text_field_tag :title, nil, class: 'question-title' %>
      </div>

      <div><br>
        <%= label_tag :description %><br>
        <%= text_area_tag :description, nil, class: 'question-description' %>
      </div>

      <div>
        <%= label_tag :points %><br>
        <%= number_field_tag :points, nil, placeholder: '# Enter number here',class: 'points' %>
      </div>




      <div class="container">
        <div class="row">
          <div class="control-group" id="fields">
            <label class="control-label" for="field1">Solutions</label>
            <div class="controls">
                <div class="entry input-group col-xs-3">

                  <input class="form-control" name="fields[]" type="text" placeholder="Type something" />
                  <span class="input-group-btn">
                    <button class="btn btn-success btn-add" type="button">
                      <span class="glyphicon glyphicon-plus"></span>
                    </button>
                  </span>

              </div>
            </div>
          <br>
          <small>Press <span class="glyphicon glyphicon-plus gs"></span> to add another solution </small>

          </div>
        </div>
      </div>


      <div>
        <%= submit_tag "GET STARTED", class: 'btn btn-default red-button top-button-margin' %>
      </div>


      <% end %>

      <%#------------ dynamic solution form is below --------%>




    </div>
  </div>


</div> <%# end container div %>
