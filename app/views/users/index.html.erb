<div class="container top-page-padding">
  <div class="title">
    <img class="rank" src="<%= asset_path( 'user.png' ) %>" width="44px", height="44px"/>&nbsp; &nbsp;
    <h2 class="inline">User List</h2>
    </img>
  </div>
  <div class="leaderboard-container">
    <table id="ranking-table">
      <thead>
        <tr>
          <th>Username</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Total Points</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <% if user == current_user %>
          <tr class="highlight-rank">
            <td><%= link_to "#{user.username}", user_path(user) %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.total_pts %></td>
          </tr>
        <% else %>
        <tr>
          <td><%= link_to "#{user.username}", user_path(user) %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.total_pts %></td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
